<Window x:Class="SP_HW1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SP_HW1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid>                           
        <DataGrid x:Name="dataGrdid" AutoGenerateColumns="False" SelectedCellsChanged="dataGrdid_SelectedCellsChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Width="100" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Process" Width="250" Binding="{Binding ProcessName}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
